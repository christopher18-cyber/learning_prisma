generator client {
  provider   = "prisma-client-js"
  engineType = "client"
  output     = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

//this file will be used for any model you want to create this project

model Book {
  id             Int      @id @default(autoincrement())
  title          String
  published_date DateTime

  author   Author? @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId Int?
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}
